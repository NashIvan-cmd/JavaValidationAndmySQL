<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx/21-ea+24"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.finalsprogtools.RegistrationController"
           prefWidth="900"
           prefHeight="800">
    <!-- Background color -->
    <Region style="-fx-background-color: #1D2228;" />

    <!-- Main content container -->
    <VBox alignment="CENTER" spacing="15.0" maxWidth="700" maxHeight="800">
        <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
        </padding>

        <!-- Registration form pane with black background -->
        <Pane style="-fx-background-color: #000000; -fx-background-radius: 20;" maxWidth="465.0" prefHeight="750.0">
            <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="20" prefWidth="365">
                <!-- Given Name Field -->
                <Label fx:id="givenNameLabel" text="Given Name" style="-fx-text-fill: white; -fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets bottom="-10"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="givenNameField" style="-fx-font-size: 16px;
                                -fx-background-color: transparent;
                                -fx-text-fill: white;
                                -fx-border-width: 0 0 1 0;
                                -fx-border-color: white;
                                -fx-padding: 5 0;"
                           prefWidth="300" />

                <!-- Surname Field -->
                <Label fx:id="surnameLabel" text="Surname" style="-fx-text-fill: white; -fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets bottom="-10" top="5"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="surnameField" style="-fx-font-size: 16px;
                                -fx-background-color: transparent;
                                -fx-text-fill: white;
                                -fx-border-width: 0 0 1 0;
                                -fx-border-color: white;
                                -fx-padding: 5 0;"
                                prefWidth="300" />

                <!-- Email Field -->
                <Label fx:id="emailLabel" text="Email Address" style="-fx-text-fill: white; -fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets bottom="-10" top="5"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="emailField" style="-fx-font-size: 16px;
                                -fx-background-color: transparent;
                                -fx-text-fill: white;
                                -fx-border-width: 0 0 1 0;
                                -fx-border-color: white;
                                -fx-padding: 5 0;"
                           prefWidth="300" />

                <!-- Birth Date Field -->
                <Label text="Birth Date" style="-fx-text-fill: white; -fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets bottom="-10" top="5"/>
                    </VBox.margin>
                </Label>
                <DatePicker fx:id="datePicker" style="-fx-background-color: white;
                                 -fx-font-size: 14px;"
                            prefWidth="300" />

                <!-- Age Field -->
                <Label fx:id="ageLabel" text="Age" style="-fx-text-fill: white; -fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets bottom="-10" top="5"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="ageField" style="-fx-font-size: 16px;
                                -fx-background-color: transparent;
                                -fx-text-fill: white;
                                -fx-border-width: 0 0 1 0;
                                -fx-border-color: white;
                                -fx-padding: 5 0;"
                                prefWidth="300" />

                <!-- Password Field -->
                <Label fx:id="psLabel" text="Password" style="-fx-text-fill: white; -fx-font-size: 12px;">
                    <VBox.margin>
                        <Insets bottom="-10" top="5"/>
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="psField" style="-fx-font-size: 14px;
                                    -fx-background-color: transparent;
                                    -fx-text-fill: white;
                                    -fx-border-width: 0 0 1 0;
                                    -fx-border-color: white;
                                    -fx-padding: 5 0;"
                               prefWidth="300" />

                <!--Confirm Password Field -->
                <Label fx:id="confirmPsLabel" text="Confirm Password" style="-fx-text-fill: white; -fx-font-size: 14px;">
                    <VBox.margin>
                        <Insets bottom="-10" top="5"/>
                    </VBox.margin>
                </Label>
                <PasswordField fx:id="confirmPsField" style="-fx-font-size: 12px;
                                    -fx-background-color: transparent;
                                    -fx-text-fill: white;
                                    -fx-border-width: 0 0 1 0;
                                    -fx-border-color: white;
                                    -fx-padding: 5 0;"
                               prefWidth="300" />
            </VBox>
        </Pane>
        <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />
        <!-- Submit Button -->
        <Button onAction="#onSubmitButtonClick"
                style="-fx-background-color: #7D2EFF;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-padding: 15 0;
                       -fx-background-radius: 25;
                       -fx-min-width: 300;
                       -fx-cursor: hand;"
                text="SUBMIT" />
        <Button onAction="#onChangeSceneButtonClick"
                style="-fx-background-color: #7D2EFF;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-padding: 15 0;
                       -fx-background-radius: 25;
                       -fx-min-width: 300;
                       -fx-cursor: hand;"
                text="View Members" />
    </VBox>
</StackPane>